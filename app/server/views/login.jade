doctype html
html
    head
        title Node.js Login
        meta(name='viewport', content='width=device-width, initial-scale=1')

        link(rel='stylesheet', href='/css/frontapp.css')
        link(rel='stylesheet', href='css/jquery.mobile-1.4.5.min.css')

        script(src='js/jquery-1.11.3.min.js')
        script(src='js/jquery.mobile-1.4.5.min.js')
        script(src='/vendor/jquery.form.js')
        script(src='/js/views/login.js')
        script(src='/js/controllers/loginController.js')
        script(src='/js/form-validators/loginValidator.js')
        script(src='/js/form-validators/emailValidator.js')

    body
        div#login-container(data-role="page", data-theme="a")
            div(data-role="header")
                img#login_header_logo(src="img/logo_resized.png")

            div(data-role="content")
                form( method="post")#login-form
                    h2 Hello !
                    h3 Please Login To Your Account
                    label Username:
                    input(type="text", name="user", id='user-tf')
                    label Password:
                    input(type="password", name="pass", id='pass-tf')
                    hr
                    button(type="submit")#btn-login
                        | Sign in
                    // label#remember-me Remember Me
                        // input(type="checkbox", checked='checked')
                div
                    button()#create-account Create An Account



